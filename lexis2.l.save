%{
#include <stdio.h>
%}

%option case-insensitive  /* Hace que las comparaciones de patrones sean insensibles a mayúsculas/minúsculas */

%%
"select"    { printf("Keyword SELECT found\n"); }
"from"      { printf("Keyword FROM found\n"); }
"where"     { printf("Keyword WHERE found\n"); }
[a-zA-Z][a-zA-Z0-9]*    { printf("ID found: %s\n", yytext); }
[ \t\n]+                { /* Ignore whitespace */ }

%%

int yywrap() {
    return 1;  /* Termina el análisis cuando no hay más entrada */
}

int main() {
    printf("Enter SQL query:\n");
    yylex();  /* Inicia el escáner */
    return 0;
}
